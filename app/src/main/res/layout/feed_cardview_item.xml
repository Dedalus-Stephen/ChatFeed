<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#181A19"
    android:paddingBottom="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#181A19">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#181A19">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/u1"
                    app:civ_border_color="#FFEB3B"
                    app:civ_border_width="2dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:id="@+id/feed_thumb"/>

                <TextView
                    android:id="@+id/feed_poster_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:textSize="25sp"
                    android:paddingEnd="5dp"
                    android:layout_toEndOf="@id/feed_thumb"
                    android:layout_centerInParent="true"
                    android:paddingStart="5dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/feed_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="hello!"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/feed_card_image"
            android:src="@drawable/av"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>